<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Adeptik Preferences is lightweight library using for storing preferences.</Description>
    <Copyright>Copyright © Adeptik</Copyright>
    <AssemblyTitle>Adeptik Preferences</AssemblyTitle>
    <Authors>Adeptik</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Adeptik.Preferences</AssemblyName>
    <PackageId>Adeptik.Preferences</PackageId>
    <PackageTags>Database;Data</PackageTags>
    <PackageReleaseNotes>Assembly signed</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/SnrdTeam/preferences-dotnetcore</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/SnrdTeam/preferences-dotnetcore/blob/master/LICENSE</PackageLicenseUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <VersionPrefix>2.0.0</VersionPrefix>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>Adeptik-PublicKey.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
    <PublicSign>True</PublicSign>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
  </ItemGroup>

</Project>
